extends layout 

block content 
  form(action="", method="POST")
    fieldset(class='floating-label')
      input(type="text", name="item_name", placeholder='', id='item_name', value=(item===undefined ? '' : item.name)) 
      label(for="item_name") Name of the item
    fieldset(class='floating-label')
      textarea(name="item_description", cols="30", rows="5", id="item_description", placeholder="") #{item===undefined ? '' : item.description}
      label(for="item_description") Description of the item
    fieldset 
      label(for="categories") Categories:    
      select(type="select", name="item_category", id="categories")
        each category in categories
          option(value=category._id, selected=category.selected) #{category.name}
    fieldset(class='floating-label') 
      input(type="number", name="item_price", id="item_price", value=(item===undefined ? 0 : item.price), min=0)
      label(for="item_price") Item price
    fieldset(class='floating-label') 
      input(type="number", id="item_stock", name="item_stock", value=(item===undefined ? 0 : item.stock), min=0)
      label(for="item_stock") Item stock
    button(type="submit") Submit

  if errors 
    ul
      for error in errors
        li!= error.msg